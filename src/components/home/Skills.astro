---
import { skills } from "../../data/skills";
import { Image } from "astro:assets";
---

<section class="flex flex-col gap-5 mt-10 xl:px-10">
  <h2 class="text-xl font-bold antialiased">Skills & Technologies</h2>
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4">
    {
      skills.map(({ name, icon }) => (
        <div class="flex items-center gap-3 rounded-lg border p-4 dark:border-gray-700">
          <Image src={icon} alt={name} width="36" height="36" />
          <span>{name}</span>
        </div>
      ))
    }
  </div>
</section>
