---
import { Image } from "astro:assets";

interface Props {
  companyLogoUrl?: string;
  position: string;
  company: string;
  period: string;
}

const { companyLogoUrl, position, company, period } = Astro.props;
---

<section class="flex flex-col gap-5 p-5 border rounded-lg">
  <div class="flex gap-5">
    <Image src="/logoipsum.svg" alt="company-logo" width="50" height="50" />
    <div class="flex flex-col">
      <h1 class="text-lg font-bold antialiased">{position}</h1>
      <h2 class="text-base text-gray-500 antialiased">{company}</h2>
    </div>
  </div>
  <span class="text-base text-gray-500 antialiased">{period}</span>
</section>
